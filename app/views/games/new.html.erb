<div class="container1">
  <h2> New Game: </h2>
  <ul>
    <% @array.each do |letter| %>
    <li> <%= letter %></li>
    <% end %>
  </ul>
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token%>
    <%= hidden_field_tag :array, @array%>
    <input type="text" name="answer" placeholder="Enter a valid word">
    <input type="submit">
  </form>
</div>
